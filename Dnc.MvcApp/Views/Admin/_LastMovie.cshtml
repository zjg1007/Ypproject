@using Dnc.MvcApp.ViewInjections
@inject ArticleInjection articleItems

<div class="list-group">
    <a asp-controller="Article"
       asp-action="LastNews"
       class="list-group-item active">
        正在热映
    </a>
    @foreach (var item in articleItems.GetArticleCollection())
    {
        <a asp-controller="Article"
           asp-action="Detail"
           asp-route-id="@item.Id"
           class="list-group-item">
            @item.Name
        </a>
    }
</div>