@model IEnumerable<Dnc.Entities.Application.Enterprise>
@{
    Layout = "_DNC";
}
<style>
    .table-responsive {
        overflow-x: hidden;
    }

    .form-control {
        width: 220px;
        display: inline-block;
    }

    .btn-success {
        width: 90px;
    }

    #formIndex {
        margin: 0 0 10px 35%;
    }
</style>
<h2 class="sub-header">选择企业</h2>
<div class="table-responsive">
    <form id="formIndex" asp-controller="Article" asp-action="Index"
          method="post">
        <input name="name" type="text" class="form-control" placeholder="请输入账号">
        <button type="submit" class="btn btn-success">查询</button>
    </form>
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th style="width:150px">账号</th>
                <th style="width:150px">企业名称 </th>
                <th>邮箱</th> 
                <th style="width:120px">联系人</th>
                <th style="width:80px">是否认证</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Account</td>
                    <td>@item.EnterpriseName</td>
                    <td>@item.Email</td>
                    <td>@item.Contact</td>
                    <td>@item.Certification</td>
                    <td>
                        <a asp-controller="Article" asp-action="Detail" asp-route-id="@item.ID" class="btn btn-default btn-xs">
                            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                        </a>
                        @*<a asp-controller="ArticleType" asp-action="Detail" asp-route-id="@item.ID" class="btn btn-default btn-xs">
                                <span class="glyphicon glyphicon-list-alt" aria-hidden="true"></span>
                            </a>
                            <a asp-controller="ArticleType" asp-action="Delete" asp-route-id="@item.ID" class="btn btn-default btn-xs">
                                <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                            </a>*@
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

