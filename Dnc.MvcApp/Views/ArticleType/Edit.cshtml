@model IEnumerable<Dnc.Entities.Business.Apply>
@{
    Layout = "_DNC";
}
<style>
    .table-responsive {
        overflow-x: hidden;
    }

    .form-control {
        width: 220px;
        display: inline-block;
    }

    .btn-success {
        width: 90px;
    }

    #formIndex {
        margin: 0 0 10px 35%;
    }
</style>
<h2 class="sub-header">您正在查看 @ViewData["NameU"] </h2>
<div class="table-responsive">
    <form id="formIndex" asp-controller="ArticleType" asp-action="Edit"
          method="post">
        <input name="name" type="text" class="form-control" placeholder="请输入账号">
        <button type="submit" class="btn btn-success">查询</button>
    </form>
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th style="width:150px">企业名称</th>
                <th style="width:150px">招聘名称</th>
                <th>描述</th>
                <th style="width:120px">发布时间</th>
                <th style="width:80px">是否取消</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Recruitment.CompanyIntroduction</td>
                    <td>@item.Recruitment.Name</td>
                    <td>@item.Recruitment.JobDescription</td>
                    <td>@item.Recruitment.ReleaseTime</td>
                    <td>@item.Recruitment.Cancel</td>
                    <td>
                        <a asp-controller="ArticleType" asp-action="Edit" asp-route-id="@item.Recruitment.ID" class="btn btn-default btn-xs">
                            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                        </a>
                            <a asp-controller="ArticleType" asp-action="Delete" asp-route-id="@item.Recruitment.ID" class="btn btn-default btn-xs">
                                <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                            </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

