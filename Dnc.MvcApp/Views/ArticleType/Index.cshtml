@using Dnc.MvcApp.Filters;
@model IEnumerable<Dnc.Entities.Application.ApplicationUser>
@{
    Layout = "_DNC";
}
<style>
    
    .table-responsive{
        overflow-x:hidden;
    }
    .form-control{
       width:220px;
       display:inline-block;
    }
    .btn-success{
        width:90px;
    }
    #formIndex{
        margin:0 0 10px 35%;
    }
   table th,td{
       text-align:center;
   }
</style>
<h2 class="sub-header">用户管理</h2>
<div class="table-responsive">
    <form id="formIndex" asp-controller="ArticleType" asp-action="Index" 
      method="post">
        <input  name="name" type="text" id="sub"  class="form-control"  placeholder="请输入手机号码">
        <button  type="submit"class="btn btn-success">查询</button>
    </form>
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th style="width:150px">手机号码</th>
                <th style="width:150px">名称</th>
                <th>自我介绍</th>
                <th style="width:120px">是否会员</th>
                <th style="width:80px">注册时间</th>
                <th style="width:80px">用户权限</th>
            </tr>
        </thead>
        
        <tbody>
            @foreach (var item in Model)
            {
               <tr>
                       <td>@item.Phonr</td>
                       <td>@item.Name</td>
                        <td>@item.Evaluation</td>
                       <td>@item.Isvip</td>
                       <td>@item.Time</td>
                   <td>@item.Group.Name</td>
                       <td>
                           <a asp-controller="ArticleType" asp-action="Detail" asp-route-id="@item.ID" class="btn btn-default btn-xs">
                               <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                           </a>
                @*<a asp-controller="ArticleType" asp-action="Delete" asp-route-id="@item.ID" class="btn btn-default btn-xs">
                    <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                </a>*@
                       </td>
                   
</tr>
               
            }
        </tbody>
    </table>
    @if (Model.ToList().Count == 0)
    {
        <h4 style="color:#808080;text-align:center; line-height:60px;">当前没有任何数据,如信息有误请联系管理员</h4>
    }
</div>
<pager pager-option="ViewBag.PagerOption as MoPagerOption"></pager>


